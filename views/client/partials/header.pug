header(class="py-3 fixed-top")
    div(class="container")
        div(class="d-flex flex-wrap align-items-center justify-content-center justify-content-lg-start")
            a(href="/" class="col-1 d-flex align-items-center mb-2 mb-lg-0 text-white text-decoration-none")
                img(src="https://via.placeholder.com/80x40.png?text=Logo" alt="Logo" style="height: 40px")
            ul(class="nav col-3")
                li
                    a(href="/" class="nav-link px-2") Trang Chủ
                li
                    a(href="#" class="nav-link px-2") Đặt Câu Hỏi
                li
