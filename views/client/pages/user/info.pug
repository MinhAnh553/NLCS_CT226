extends ../../layouts/default.pug

block main  

    //- main(class="pt-lg-5")
    //-     div(class="container")
    //-         // Grid row
    //-         div(class="row gx-xl-5")
    div(class="container mb-5 mt-5")
        div(class="question-card card p-4")
            div(class="d-flex justify-content-between align-items-center")
                // Profile Picture and Info
                div(class="d-flex justify-content-center align-items-center")
                    div(class="me-4")
                        img(src=(user.avatar ? user.avatar : "/images/avatar.png") class="rounded-circle border" alt="Profile Picture" style="width:80px;height:80px;font-size:20px;object-fit: cover;")
                    div
                        h5(class="mb-1") #{user.fullName}
                        //- p(class="text-muted mb-0") @minhanh2003
                        //- p(class="text-muted") Danh hiệu: 
                        //-     span(class="text-success") Lính mới
                        div(class="d-flex align-items-center")
                            //- span(class="me-3")
                            //-     i(class="fas fa-star text-warning")
                            //-     | 0 câu hay nhất
                            span(class="me-3")
                                i(class="fa-solid fa-thumbs-up text-primary" style="margin-right: 5px;")
                                span #{user.likes} lượt like
                            //- span
                            //-     i(class="fas fa-wallet text-success")
                            //-     | Số dư: 10.000 đ
                // Edit Button 
                a(href="/user/edit-info")
                    button(class="btn btn-light btn-sm p-2 px-3" style="background: #dee0e1; color: rgb(82 82 82); font-weight: 500;")
                        i(class="fa-solid fa-user-pen" style="margin-right: 7px;")
                        | Chỉnh sửa thông tin
            // Description
            p(class="mt-3 text-muted") #{user.describe}
            // Tabs
            ul#profileTabs(class="nav nav-tabs mt-4" role="tablist")
                li(class="nav-item" role="presentation")
                    a#questions-tab(class="nav-link active" data-mdb-toggle="tab" href="#questions" role="tab" aria-controls="questions" aria-selected="true") Câu hỏi
                li(class="nav-item" role="presentation")
                    a#answers-tab(class="nav-link" data-mdb-toggle="tab" href="#answers" role="tab" aria-controls="answers" aria-selected="false") Câu trả lời
                //- li(class="nav-item" role="presentation")
                //-     a#saved-tab(class="nav-link" data-mdb-toggle="tab" href="#saved" role="tab" aria-controls="saved" aria-selected="false") Lưu
                //- li(class="nav-item" role="presentation")
                //-     a#settings-tab(class="nav-link" data-mdb-toggle="tab" href="#settings" role="tab" aria-controls="settings" aria-selected="false") Cài đặt
            // Tab Contents
            #profileTabContent(class="tab-content")
                #questions(class="tab-pane fade show active" role="tabpanel" aria-labelledby="questions-tab")
