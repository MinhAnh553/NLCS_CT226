doctype html
html    
    head
        meta(charset="utf-8")
        meta(name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no")
        meta(http-equiv="x-ua-compatible" content="ie=edge")
        title #{pageTitle}
        // Font Awesome
        link(rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css" integrity="sha512-Kc323vGBEqzTmouAECnVceyQqyqdsSiqLQISBL29aUW4U/M7pSPA/gEUZQqv1cwx4OnYxTxve5UMg5GT6L4JJg==" crossorigin="anonymous" referrerpolicy="no-referrer")
        // Bootstrap core CSS
        link(href="/admin/css/bootstrap.min.css" rel="stylesheet")
        // Material Design Bootstrap
        link(href="/admin/css/mdb.min.css" rel="stylesheet")
        // Sweetalert
        script(src="https://cdn.jsdelivr.net/npm/sweetalert2@11")
        // Viewer
        script(src="https://cdnjs.cloudflare.com/ajax/libs/viewerjs/1.11.6/viewer.min.js")
        link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/viewerjs/1.11.6/viewer.css")
        // Your custom styles (optional)
        link(href="/admin/css/style.min.css" rel="stylesheet")

    body
        include ../partials/header.pug

        main(class="pt-5 mx-lg-5")
            div(class="container mt-5")
                section(class="content-header")
                    div(class="row mb-2")
                        div(class="col-sm-6")
                            h2 #{pageTitle}
                block main

        include ../partials/footer.pug

        
        // JQuery
        script(type="text/javascript" src="/admin/js/jquery-3.4.1.min.js")
        // Bootstrap tooltips
        script(type="text/javascript" src="/admin/js/popper.min.js")
        // Bootstrap core JavaScript
        script(type="text/javascript" src="/admin/js/bootstrap.min.js")
        // MDB core JavaScript
        script(type="text/javascript" src="/admin/js/mdb.min.js")

        script(type="module" src="/admin/js/script.js")
        block script